pipeline {
    agent any

    environment {
        IMAGE        = "sham9394/cityzen"
        IMAGE_TAG    = "${BUILD_NUMBER}"
        GITHUB_REPO  = "https://github.com/sham9394/k8s-project.git"
        GIT_BRANCH   = "main"
    }

    stages {

        stage('Clone GitHub Repo') {
            steps {
                git branch: "${GIT_BRANCH}", url: "${GITHUB_REPO}"
            }
        }

        stage('Build Docker Image') {
            steps {
                bat """
                    echo Building Docker image...
                    cd C:\\Users\\kk\\Desktop\\Hackthon
                    docker build -t ${IMAGE}:${IMAGE_TAG} .
                """
            }
        }

        stage('Login to Docker Hub') {
            steps {
                withCredentials([usernamePassword(
                    credentialsId: 'dockerhub',
                    usernameVariable: 'USERNAME',
                    passwordVariable: 'PASSWORD'
                )]) {
                    bat """
                        echo Logging in to Docker Hub...
                        echo %PASSWORD% | docker login -u %USERNAME% --password-stdin
                    """
                }
            }
        }

        stage('Push Docker Image') {
            steps {
                bat """
                    docker push ${IMAGE}:${IMAGE_TAG}
                    docker tag ${IMAGE}:${IMAGE_TAG} ${IMAGE}:latest
                    docker push ${IMAGE}:latest
                """
            }
        }

        stage('Deploy to Kubernetes') {
            steps {
                bat """
                    echo Applying Kubernetes deployment file...
                    cd C:\\Users\\kk\\Desktop\\Hackthon\\K8s
                    kubectl apply -f deployment.yaml

                    echo Checking rollout status...
                    kubectl rollout status deployment/cityzen-frontend
                """
            }
        }
    }

    post {
        success {
            echo "üéâ Deployment successful!"
        }
        failure {
            echo "‚ùå Deployment failed!"
        }
    }
}
